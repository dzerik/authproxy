# Auth-Portal Docker Environment Variables
# Copy this file to .env and update the values

# Keycloak Admin Credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# PostgreSQL Password (used by Keycloak)
POSTGRES_PASSWORD=keycloak

# Keycloak Client Secret (from Keycloak admin console)
KC_CLIENT_SECRET=your-client-secret-here

# Session Security
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-here

# Encryption Key (32 bytes for AES-256)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# JWT Signing Key (optional, for JWT session store)
# Generate with: openssl rand -base64 64
JWT_SIGNING_KEY=your-jwt-signing-key-here

# Redis Password (if using Redis session store)
REDIS_PASSWORD=redis
