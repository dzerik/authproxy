# ============================================================================
# E2E Testing Environment Configuration
# Copy this file to .env and adjust values as needed
# ============================================================================

# ============================================================================
# INFRASTRUCTURE SERVICES
# ============================================================================

# PostgreSQL
POSTGRES_PASSWORD=keycloak

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_PORT=8180
KC_LOG_LEVEL=info

# Redis
REDIS_PASSWORD=redis
REDIS_PORT=6379

# OPA
OPA_PORT=8181
OPA_LOG_LEVEL=info

# ============================================================================
# OBSERVABILITY
# ============================================================================

# Jaeger
JAEGER_UI_PORT=16686
JAEGER_OTLP_GRPC=4317
JAEGER_OTLP_HTTP=4318

# Prometheus
PROMETHEUS_PORT=9090

# Grafana (with Keycloak OIDC integration)
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_OAUTH_SECRET=grafana-secret

# ============================================================================
# MOCK SERVICES
# ============================================================================

MOCK_USER_PORT=8081
MOCK_ADMIN_PORT=8082
MOCK_EXTERNAL_PORT=8083

# ============================================================================
# CHAOS ENGINEERING
# ============================================================================

TOXIPROXY_API_PORT=8474
TOXIPROXY_KC_PORT=18080
TOXIPROXY_REDIS_PORT=16379
TOXIPROXY_OPA_PORT=18181

# ============================================================================
# AUTH-PORTAL
# ============================================================================

PORTAL_PORT=8880
PORTAL_METRICS_PORT=8881
DEV_MODE=false
KC_CLIENT_SECRET=test-client-secret
SESSION_SECRET=e2e-session-secret-32bytes!
ENCRYPTION_KEY=abcdefghijklmnopqrstuvwxyz123456
LOG_LEVEL=debug

# ============================================================================
# AUTHZ-SERVICE
# ============================================================================

# Internal authz-service
AUTHZ_HTTP_PORT=8080
AUTHZ_GRPC_PORT=8088
AUTHZ_ADMIN_PORT=15000
AUTHZ_HEALTH_PORT=15020
AUTHZ_READY_PORT=15021
AUTHZ_LOG_LEVEL=debug

# External authz-service (partner)
AUTHZ_EXT_HTTP_PORT=9080
AUTHZ_EXT_GRPC_PORT=9088
AUTHZ_EXT_ADMIN_PORT=25000
AUTHZ_EXT_HEALTH_PORT=25020
AUTHZ_EXT_READY_PORT=25021

# ============================================================================
# MAIL (optional, use --profile mail)
# ============================================================================

MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025
